<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/topLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <com.recharge.i7ewallet.utils.NDSpinner
                android:id="@+id/spinnerUserType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_view_border"
                android:minHeight="40dp" />


            <com.recharge.i7ewallet.utils.NDSpinner
                android:id="@+id/spinnerScheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/text_view_border"
                android:minHeight="40dp" />


            <EditText
                android:id="@+id/editTextOwnerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/text_view_border"
                android:hint="@string/ownerNameAdduser"
                android:inputType="text"
                android:textColorHint="@color/icon_tint" />

            <EditText
                android:id="@+id/editTextName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/text_view_border"
                android:hint="@string/lblUsername"
                android:inputType="textPersonName"
                android:textColorHint="@color/icon_tint" />


            <EditText
                android:id="@+id/editTextMobileNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/text_view_border"
                android:digits="0123456789"
                android:hint="@string/mobile_no"
                android:inputType="phone"
                android:maxLength="10"
                android:textColorHint="@color/icon_tint" />


            <EditText
                android:id="@+id/editTextFarmName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/text_view_border"
                android:hint="@string/farmName"
                android:textColorHint="@color/icon_tint" />


            <EditText
                android:id="@+id/editTextPanNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/text_view_border"
                android:hint="@string/PanNumber"
                android:textColorHint="@color/icon_tint" />


            <EditText
                android:id="@+id/editTextAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/text_view_border"
                android:hint="@string/address"
                android:textColorHint="@color/icon_tint" />


        </LinearLayout>

        <Button
            android:id="@+id/btnAddUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_shape"
            android:text="ADD USER"
            android:textAllCaps="false"
            android:textColor="@color/white" />
    </LinearLayout>
</ScrollView>