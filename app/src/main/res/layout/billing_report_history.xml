<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/padding_5"
    android:layout_marginLeft="@dimen/margin_5dp"
    android:layout_marginRight="@dimen/margin_5dp"
    android:layout_marginTop="@dimen/padding_2"
    android:orientation="vertical">


    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/margin_10dp"
        app:cardCornerRadius="@dimen/margin_5dp">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <!--android:background="@drawable/layout_bg"-->

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">

                <com.example.webplat.amoldesigning.Utils.TypefacedTextView
                    android:id="@+id/txtOpeningBal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="dfdfdf"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/text_size_14sp"
                    android:textStyle="normal"
                    app:typeface="Roboto-Regular.ttf" />

                <com.example.webplat.amoldesigning.Utils.TypefacedTextView
                    android:id="@+id/txtSurcharge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="old balance"
                    android:linksClickable="true"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_12sp"
                    android:textStyle="bold"
                    app:typeface="Roboto-Regular.ttf" />

                <com.example.webplat.amoldesigning.Utils.TypefacedTextView
                    android:id="@+id/txtCredits"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:hint="new balancee"
                    android:linksClickable="true"
                    android:textColor="@color/green"
                    android:textSize="@dimen/text_size_12sp"
                    android:textStyle="bold"
                    app:typeface="Roboto-Regular.ttf" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout1"
                android:layout_marginTop="@dimen/size_10dp">

                <com.example.webplat.amoldesigning.Utils.TypefacedTextView
                    android:id="@+id/txtDiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="id22222"
                    android:textColor="@color/green"
                    android:textSize="@dimen/text_size_12sp"
                    app:typeface="Roboto-Regular.ttf" />


                <com.example.webplat.amoldesigning.Utils.TypefacedTextView
                    android:id="@+id/txtdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/txtDebits"
                    android:layout_toRightOf="@+id/txtDiscount"
                    android:text="date"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_12sp"
                    app:typeface="Roboto-Regular.ttf" />


                <com.example.webplat.amoldesigning.Utils.TypefacedTextView
                    android:id="@+id/txtDebits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="time"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_12sp"
                    app:typeface="Roboto-Regular.ttf" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/one"
                android:layout_marginTop="@dimen/size_10dp">

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/sdsd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tree">

                <TextView
                    android:id="@+id/txt_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="id22222"
                    android:textSize="@dimen/text_size_14sp"
                    android:textStyle="bold" />


            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>