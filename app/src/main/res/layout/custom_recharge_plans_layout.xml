<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/margin_10dp"
    android:layout_height="wrap_content">


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txtDescriptionType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text="Regular Talktime" />

    <TextView
        android:layout_marginTop="@dimen/margin_10dp"
        android:id="@+id/txtTalkTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtDescriptionType"
        android:text="Talktime    "
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/txtTalkTime"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDescriptionType"
        android:layout_toRightOf="@+id/txtTalkTimeText"
        android:textSize="16sp"
        android:text="Rs 7.73" />

    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_10dp"
        android:background="@color/lightgrey"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@id/txtTalkTimeText"
        android:layout_width="match_parent"
        android:layout_height="30dp">

    <TextView
        android:layout_marginLeft="@dimen/margin_20dp"
        android:layout_weight="1"
        android:id="@+id/txtValidaty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_below="@id/txtTalkTimeText"
        android:textSize="16sp"
        android:textColor="@color/red"
        android:text="unlimited" />

    <TextView
        android:layout_weight="1"
        android:id="@+id/txtAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtTalkTimeText"
        android:text="Rs 10"
        android:textColor="@color/green"
        android:textSize="16sp" />

    </LinearLayout>


</RelativeLayout>
</android.support.v7.widget.CardView>